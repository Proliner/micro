{% extends 'base.html.twig' %}

{% block title %}Microblog | Bericht: {{ post.title }}{% endblock %}

{% block body %}
    <h1 class="mb-4">Bericht</h1>

    <div class="row">
        <div class="col-lg-12">

            <div class="card border-light mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text text-secondary">{{ post.message }}</p>
                </div>
                <div class="card-footer text-muted d-flex align-items-center bd-highlight">
                    <div class="bd-highlight">
                        {#<a class="btn btn-sm" href="{{ path('posts_show', {'id': post.id}) }}">Bekijken</a>#}
                    </div>

                    <div class="ml-auto bd-highlight">
                        <p class="post-date m-0 text-monospace ">{{ post.createdat.date|date("H:i â€” j M.")|lower }}</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <a href="{{ path('posts_index') }}">Terug naar het overzicht</a>
        </div>
        <div class="col-lg-6">
            <div class="float-right">
                <button class="btn btn-primary" href="{{ path('posts_edit', {'id': post.id}) }}">Aanpassen</button>
                {{ include('posts/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}