{% extends 'base.html.twig' %}

{% block title %}Microblog | Bericht {{ post.title }} aanpassen{% endblock %}

{% block body %}
    <h1 class="mb-4">Bericht aanpassen</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="row">
        <div class="col-lg-6">
            <a href="{{ path('posts_index') }}">Annuleren</a>
        </div>
        <div class="col-lg-6">
            <div class="float-right">
                {{ include('posts/_delete_form.html.twig') }}
                <button type="submit" class="btn btn-success">Aanpassen</button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
